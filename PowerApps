  <script>
    (function(){
      const toast = document.getElementById('toast');
      const year = document.getElementById('year');
      const leadForm = document.getElementById('leadForm');
      const ctaSecondary = document.getElementById('ctaSecondary');

      year.textContent = new Date().getFullYear();

      function showToast(msg){
        toast.textContent = msg;
        toast.classList.add('show');
        window.clearTimeout(showToast._t);
        showToast._t = window.setTimeout(()=> toast.classList.remove('show'), 2600);
      }

      // Demo: CTA downloads — replace with your real PDF URL
      ctaSecondary.addEventListener('click', function(){
        showToast("Hook this button to your eBook PDF URL in WordPress.");
        // Example:
        // window.location.href = "/wp-content/uploads/2026/02/powerapps-ebook.pdf";
      });

      // Demo: form submit — replace with Ninja Forms or your endpoint
      leadForm.addEventListener('submit', function(e){
        e.preventDefault();
        const data = {
          name: document.getElementById('name').value.trim(),
          email: document.getElementById('email').value.trim(),
          need: document.getElementById('need').value,
          details: document.getElementById('details').value.trim()
        };

        // Example: send to a Power Automate HTTP trigger endpoint:
        // fetch("https://prod-xx.westus.logic.azure.com:443/workflows/.../triggers/manual/paths/invoke?api-version=2016-10-01", {
        //   method: "POST",
        //   headers: { "Content-Type": "application/json" },
        //   body: JSON.stringify(data)
        // }).then(() => showToast("Request sent. We'll reply soon."))
        //   .catch(() => showToast("Error sending request. Please try again."));
//DEPLOY using Wordpress and HTML section

        showToast("Demo only: connect to Ninja Forms or a Power Automate endpoint.");
        leadForm.reset();
      });
    })();
  </script>
